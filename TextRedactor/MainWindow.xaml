<Window x:Class="TextRedactor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextRedactor"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<WrapPanel Grid.Row="0">
			
			<Border BorderThickness="2" BorderBrush="Black"
											Margin="5">
				<DockPanel>
					<TextBox/>
					<Button Content="🔼"/>
				</DockPanel>
			</Border>

			<Button Margin="5" Content="save"/>

			<CheckBox Margin="5"/>

			<Button Margin="5" Content="cut"/>
			
			<Button Margin="5" Content="copy"/>

			<Button Margin="5" Content="paste"/>
			
			<Button Margin="5" Content="select all"/>
			
		</WrapPanel>

	</Grid>
</Window>
